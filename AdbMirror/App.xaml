<Application x:Class="AdbMirror.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Labyrica Design Tokens -->

        <!-- Colors -->
        <Color x:Key="LabBackgroundColor">#FF000000</Color>
        <Color x:Key="LabSurfaceColor">#FF111111</Color>
        <Color x:Key="LabBorderPrimaryColor">#FF222222</Color>
        <Color x:Key="LabBorderSecondaryColor">#FF333333</Color>

        <!-- Slightly softened text colors for readability and hierarchy -->
        <Color x:Key="LabTextPrimaryColor">#FFF5F5F5</Color>
        <Color x:Key="LabTextSecondaryColor">#FFB3B3B3</Color>
        <Color x:Key="LabTextAccentColor">#FFDDDDDD</Color>

        <Color x:Key="LabStatusSuccessColor">#FF40F99B</Color>
        <Color x:Key="LabStatusErrorColor">#FFFF3333</Color>
        <Color x:Key="LabStatusWarningColor">#FFF5A623</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="LabBackgroundBrush" Color="{StaticResource LabBackgroundColor}" />
        <SolidColorBrush x:Key="LabSurfaceBrush" Color="{StaticResource LabSurfaceColor}" />
        <SolidColorBrush x:Key="LabBorderPrimaryBrush" Color="{StaticResource LabBorderPrimaryColor}" />
        <SolidColorBrush x:Key="LabBorderSecondaryBrush" Color="{StaticResource LabBorderSecondaryColor}" />

        <SolidColorBrush x:Key="LabTextPrimaryBrush" Color="{StaticResource LabTextPrimaryColor}" />
        <SolidColorBrush x:Key="LabTextSecondaryBrush" Color="{StaticResource LabTextSecondaryColor}" />
        <SolidColorBrush x:Key="LabTextAccentBrush" Color="{StaticResource LabTextAccentColor}" />

        <SolidColorBrush x:Key="LabStatusSuccessBrush" Color="{StaticResource LabStatusSuccessColor}" />
        <SolidColorBrush x:Key="LabStatusErrorBrush" Color="{StaticResource LabStatusErrorColor}" />
        <SolidColorBrush x:Key="LabStatusWarningBrush" Color="{StaticResource LabStatusWarningColor}" />

        <!-- Typography -->
        <!-- Global defaults -->
        <Style TargetType="Window">
            <Setter Property="Background" Value="{StaticResource LabBackgroundBrush}" />
            <Setter Property="Foreground" Value="{StaticResource LabTextPrimaryBrush}" />
            <Setter Property="FontFamily" Value="Segoe UI" />
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource LabTextPrimaryBrush}" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style x:Key="LabHeadingTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource LabTextPrimaryBrush}" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="LabBodyTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource LabTextSecondaryBrush}" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style x:Key="LabLabelTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource LabTextAccentBrush}" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <!-- Panels / Cards -->
        <Style x:Key="LabCardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource LabSurfaceBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource LabBorderPrimaryBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="16" />
        </Style>

        <!-- Buttons -->
        <Style x:Key="LabPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFFFF" />
            <Setter Property="Foreground" Value="#FF000000" />
            <Setter Property="BorderBrush" Value="#FF666666" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabGhostButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource LabTextPrimaryBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource LabBorderPrimaryBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox -->
        <Style x:Key="LabComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource LabTextPrimaryBrush}" />
            <Setter Property="Background" Value="{StaticResource LabBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource LabBorderSecondaryBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="4,2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                                          Grid.Column="2"
                                          Focusable="False"
                                          ClickMode="Press"
                                          IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{StaticResource LabBackgroundBrush}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3">
                                            <Path x:Name="Arrow"
                                                  Fill="{StaticResource LabTextPrimaryBrush}"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,4,0"
                                                  Data="M 0 0 L 4 4 L 8 0 Z"/>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="4,2,23,2"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <TextBox Name="PART_EditableTextBox"
                                     Style="{x:Null}"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Margin="4,2,23,2"
                                     Focusable="True"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="0"
                                     IsReadOnly="{TemplateBinding IsReadOnly}">
                                <TextBox.Foreground>
                                    <SolidColorBrush Color="{StaticResource LabTextPrimaryColor}"/>
                                </TextBox.Foreground>
                            </TextBox>
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Background="{StaticResource LabBackgroundBrush}"
                                            BorderBrush="{StaticResource LabBorderSecondaryBrush}"
                                            BorderThickness="1"
                                            CornerRadius="3">
                                        <ScrollViewer Margin="4,6,4,6"
                                                      SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True"
                                                        KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource LabTextSecondaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Foreground" Value="{StaticResource LabTextPrimaryBrush}"/>
                    <Setter Property="Background" Value="{StaticResource LabBackgroundBrush}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="4,2"/>
                    <Style.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter Property="Background" Value="{StaticResource LabBorderPrimaryBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Style.Resources>
        </Style>
    </Application.Resources>
</Application>


